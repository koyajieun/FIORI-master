<mvc:View
    controllerName="odata.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.uxap"
>
    <ObjectPageLayout 
        id="ObjectPageLayout"
        showTitleInHeaderContent="true"
        alwaysShowContentHeader="false"
        preserveHeaderStateOnScroll="false"
        headerContentPinnable="true"
        isChildPage="true"
        upperCaseAnchorBar="false">
        <headerTitle>
            <ObjectPageDynamicHeaderTitle>
            </ObjectPageDynamicHeaderTitle>
        </headerTitle>

        <headerContent>
            <m:FlexBox wrap="Wrap"
                       fitContainer="true"
                       alignItems="Stretch">
                <f:Avatar
                    displayShape="Square"
                    displaySize="L"
                    class="sapUiTinyMarginEnd">
                </f:Avatar>
            </m:FlexBox>
        </headerContent>

        <sections>
            <ObjectPageSection title="General Information">
                <subSections>
                    <ObjectPageSubSection>
                        <blocks>
                            <m:Text text="{app>/detail/Plant}" />
                            <m:Text text="{app>/detail/Roomtp}" />
                            <!-- <m:VBox>
                                <m:VBox>
                                    <m:Text text="기타"/>
                                    <m:TextArea width="100%" height="100px" />
                                    <m:Text text="추가사항"/>
                                    <m:TextArea width="100%" height="100px" />
                               </m:VBox>
                            </m:VBox>  -->
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>

            

            <ObjectPageSection title="Suppliers">
                <subSections>
                    <ObjectPageSubSection>
                        <blocks>
                            <m:VBox>

                            <m:Table 
                            id="mTable"
                             items="{all>/filterMTable}" >
                            <m:columns>
                                <m:Column>
                                    <m:Text text="객실타입" />
                                </m:Column>

                                <m:Column>
                                    <m:Text text="제품명" />
                                </m:Column>
                            
                            </m:columns>
                            <m:items>
                                <m:ColumnListItem type="Navigation" press=".onDetailListItemPress">
                                    <m:cells>
                                        <m:ObjectIdentifier text="{all>Roomtp}"></m:ObjectIdentifier>
                                        <m:ObjectIdentifier text="{all>prod}"></m:ObjectIdentifier>
                                    </m:cells>
                                
                                </m:ColumnListItem>
                            </m:items>
                        </m:Table>
                                
                                    <m:Text text="특이사항" />
                                    <m:TextArea 
                                    width="100%" 
                                    height="100px"
                                    value="{app>/detail/Note}"
                                    valueState="Information"
                                    placeholder="ValueState : Information"
                                     />
                            
                                    
    
                                    <m:Text text="추가사항"/>
                                    <m:TextArea width="100%" height="100px" />

                                    <m:Button text="저장" type="Emphasized" press="onPress" />

                                    
                                </m:VBox>
                            
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection> 
        </sections>
    </ObjectPageLayout>
</mvc:View>
